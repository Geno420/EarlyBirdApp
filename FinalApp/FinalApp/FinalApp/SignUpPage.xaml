<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="FinalApp.LoginPage"
             BackgroundColor="Blue"
             >
    <ContentPage.Content>
        <StackLayout Margin="14">

            <Entry Text="{Binding Name}" Placeholder="Name:" PlaceholderColor="White" TextColor="White"
                   
                   />
            <Entry Text="{Binding Password}" Placeholder="Password:" PlaceholderColor="White" TextColor="White" 
                   />
            <Entry Text="{Binding Username}" Placeholder="UserName:" PlaceholderColor="White" TextColor="White"
                   />



            <Image
               Source="SignUp.jpg"
                
                
                ></Image>
            <Button Text="Sign up"  
                    
                   
            />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>